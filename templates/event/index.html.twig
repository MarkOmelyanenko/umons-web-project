{% extends 'base.html.twig' %}

{% block title %}All Events{% endblock %}

{% block body %}
<div class="container">
<div class="row">
    <!-- Left: Event List -->
    <div class="col-md-4">
        <h2>Upcoming Events</h2>
        <ul class="list-group">
            {% for event in events %}
                <li class="list-group-item">
                    <a href="{{ path('event_show', {'id': event.id}) }}">
                        {{ event.title }}<br>
                        <small>{{ event.startAt|date('Y-m-d H:i') }}</small>
                    </a>
                </li>
            {% else %}
                <li class="list-group-item">No events found.</li>
            {% endfor %}
        </ul>
    </div>

    <!-- Right: Calendar -->
    <div class="col-md-8">
        <div id="calendar"></div>
    </div>
</div>
</div>

<!-- FullCalendar Styles + Scripts -->
<link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const calendarEl = document.getElementById('calendar');

        const calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth',
            events: [
                {% for event in events %}
                {
                    title: '{{ event.title|e('js') }}',
                    start: '{{ event.startAt|date('Y-m-d\\TH:i:s') }}',
                    url: '{{ path('event_show', {'id': event.id}) }}'
                },
                {% endfor %}
            ],
            eventClick: function (info) {
                // Default behavior: follow the link
            }
        });

        calendar.render();
    });
</script>
{% endblock %}
