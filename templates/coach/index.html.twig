{% extends 'base.html.twig' %}

{% block title %}Our Coaches{% endblock %}

{% block body %}
<h1 class="mb-4">Meet Our Coaches</h1>
<div class="row">
    {% for coach in coaches %}
        <div class="col-md-3">
            <div class="card mb-4 shadow-sm">
                <img src="{{ coach.photoUrl }}" class="card-img-top" alt="{{ coach.name }}">
                <div class="card-body">
                    <h5 class="card-title">{{ coach.name }}</h5>
                    <p class="card-text">{{ coach.bio }}</p>
                    <p><strong>Experience:</strong> {{ coach.experienceYears }} years</p>
                </div>
            </div>
        </div>
    {% else %}
        <p>No coaches found.</p>
    {% endfor %}
</div>
{% endblock %}
