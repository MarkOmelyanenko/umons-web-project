{% extends 'base.html.twig' %}

{% block title %}Club Blog{% endblock %}

{% block body %}
<h1>Club News</h1>
<div class="row">
    {% for post in posts %}
        <div class="col-md-6">
            <div class="card mb-4 shadow-sm">
                {% if post.imageUrl %}
                    <img src="{{ post.imageUrl }}" class="card-img-top" alt="...">
                {% endif %}
                <div class="card-body">
                    <h5 class="card-title">{{ post.title }}</h5>
                    <p class="card-text">{{ post.content|slice(0, 100) ~ '...' }}</p>
                    <a href="{{ path('blog_show', {'id': post.id}) }}" class="btn btn-primary">Read more</a>
                </div>
            </div>
        </div>
    {% else %}
        <p>No blog posts yet.</p>
    {% endfor %}
</div>
{% endblock %}
