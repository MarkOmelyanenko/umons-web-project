{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
<div class="container">
    <div class="card mb-4 shadow-sm">
        {% if post.imageUrl %}
            <img src="{{ post.imageUrl }}" class="card-img-top" alt="">
        {% endif %}
        <div class="card-body">
            <h1 class="card-title">{{ post.title }}</h1>
            <p class="text-muted">by {{ post.author }} on {{ post.createdAt|date('Y-m-d H:i') }}</p>
            <p class="card-text">{{ post.content }}</p>
            <a href="{{ path('blog_index') }}" class="btn btn-outline-secondary">‚Üê Back to Blog</a>
        </div>
    </div>
</div>
{% endblock %}
